@{
    ViewData["Title"] = "Rezervasyon";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <h1>Kalmak istediğiniz oda tipini seçin.</h1>
    @model List<room_type>
    <table class="table table-bordered">
        <tr>
            <th>Oda derecesi</th>
            <th>maximum kapasite</th>
            <th>Odayı seç</th>
        </tr>



        @foreach (var x in Model)
        {
            <tr>
                <!-- <td>@x.id</td> -->
                @{
                    String result = @x.description;
                }
                <td>@result</td>
                <td>@x.max_capasity</td>

                <td><a href="~/Home/Rezervasyon2" class="btn btn-primary">Seç</a></td>
            </tr>
        }
    </table>